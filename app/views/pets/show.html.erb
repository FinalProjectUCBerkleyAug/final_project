<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @pet.user_id %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @pet.breed %>
</p>

<p>
  <strong>Species:</strong>
  <%= @pet.species %>
</p>

<% pre_favor = @pet.favors.find { |favor| favor.user_id == current_user.id} %>
<% if pre_favor %>
  <%= link_to pet_favor_path(@pet, pre_favor), method: :delete do %>
    UnFavor
  <% end %>
<% else %>
  <%= link_to pet_favors_path(@pet), method: :post do %>
    <i class="fa fa-paw"></i>
    High Paw - Favor this pet!
  <% end %>
<% end %>
<p><%= @pet.favors.count %> Favor(s)</p>

<%= link_to 'Edit', edit_pet_path(@pet) %> |
<%= link_to 'Back', pets_path %>
